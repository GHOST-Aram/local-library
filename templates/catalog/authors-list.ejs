<%-include('../partials/head.ejs') %>
<body>
    <%-include('../partials/nav.ejs') %>
    <main>
        <h1>Authors in the Library</h1>
        <ul>
            <% if(authors.length > 0) { %>
                <% authors.map(author =>{ %>    
                    <li style="padding-block: .4rem;">
                        <a href="<%=author.url%>">
                            <%=author.name%>
                        </a>
                    </li>
                <%})%>
            <%} else {%>
                <p>There are no authors to display.</p>
            <%}%>
        </ul>
    </main>
    <%-include('../partials/footer.ejs') %>
</body>
</html>