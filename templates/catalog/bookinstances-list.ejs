<%-include('../partials/head.ejs') %>
<body>
    <%-include('../partials/nav.ejs') %>
    <main>
        <h1>Book Instances in the Library</h1>
        <ul>
            <% if(bookinstances.length > 0) { %>    
                <% bookinstances.map(bookinstance =>{ %>    
                    <li>
                        <strong>Title: </strong>
                        <a href="<%=bookinstance.url%>">
                            <%=bookinstance.book.title%>
                        </a>
                    </li>
                    <li>
                        <strong>Status: </strong>
                        <%=bookinstance.status %>
                    </li>
                    <br>
                <%})%>
            <%} else {%>
                <p>There are no book instances to display.</p>
            <%}%>
        </ul>
    </main>
    <%-include('../partials/footer.ejs') %>
</body>
</html>